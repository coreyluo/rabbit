<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bazinga.replay.dao.ResultTableDAO">

    <resultMap id="BaseResultMap" type="com.bazinga.replay.model.ResultTable">
        <id column="id" jdbcType="BIGINT"  property="id" />
        <result column="date_trade" jdbcType="INTEGER" property="dateTrade"/>
        <result column="thscode" jdbcType="VARCHAR" property="thscode"/>
        <result column="total_trade_money" jdbcType="DECIMAL" property="totalTradeMoney"/>
    </resultMap>


    <sql id="Base_Column_List">
        id,
            date_trade,
            thscode,
            total_trade_money
        </sql>


    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from result_table
        where id = #{id}
    </select>


    <insert id="insert" parameterType="com.bazinga.replay.model.ResultTable" useGeneratedKeys="true" keyProperty="id">
        insert into result_table (<include refid="Base_Column_List" />)
        values(
        #{id, jdbcType=BIGINT},
            #{dateTrade, jdbcType=INTEGER},
            #{thscode, jdbcType=VARCHAR},
            #{totalTradeMoney, jdbcType=DECIMAL}
            )
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.bazinga.replay.model.ResultTable">
        update result_table
        <set>
            <if test="dateTrade != null">
                date_trade = #{dateTrade, jdbcType=INTEGER},
            </if>
            <if test="thscode != null">
                thscode = #{thscode, jdbcType=VARCHAR},
            </if>
            <if test="totalTradeMoney != null">
                total_trade_money = #{totalTradeMoney, jdbcType=DECIMAL},
            </if>
        </set>
        where id = #{id} limit 1
    </update>

    <sql id="Equal_Where_List">
        <if test="dateTrade != null">
            and date_trade = #{dateTrade, jdbcType=INTEGER}
        </if>
        <if test="thscode != null">
            and thscode = #{thscode, jdbcType=VARCHAR}
        </if>
        <if test="totalTradeMoney != null">
            and total_trade_money = #{totalTradeMoney, jdbcType=DECIMAL}
        </if>
    </sql>

    <sql id="Range_Where_List">
    </sql>

    <sql id="GtLastMaxId_Where">
        <if test="lastMaxId != null and lastMaxId > 0">
            and id > #{lastMaxId}
        </if>
    </sql>

    <sql id="Order_By">
        <if test="sorts != null and sorts.size > 0">
            ORDER BY
            <foreach collection="sorts" item="sortItem" separator=",">
                ${sortItem.column} ${sortItem.type.message}
            </foreach>
        </if>
    </sql>

    <select id="selectByCondition" parameterType="com.bazinga.replay.query.ResultTableQuery" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List"/>
        from result_table
        <where>
            <include refid="Equal_Where_List"/>
            <include refid="Range_Where_List"/>
            <include refid="GtLastMaxId_Where" />
        </where>
        <include refid="Order_By"/>
        <if test="limit > 0">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="countByCondition" parameterType="com.bazinga.replay.query.ResultTableQuery" resultType="java.lang.Integer">
        select count(1)
        from result_table
        <where>
            <include refid="Equal_Where_List"/>
            <include refid="Range_Where_List"/>
        </where>
    </select>


</mapper>